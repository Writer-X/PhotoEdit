<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    <include
        android:id="@+id/commman_top_bar"
        layout="@layout/top_bar" />
    
    <LinearLayout
        android:id="@+id/Layout_watermark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/List_watermark"
        android:layout_below="@+id/common_top_bar"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>   
    
    <ImageView
        android:id="@+id/picture_watermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    
    <!-- 水印画廊布局 -->
    <HorizontalScrollView
        android:id="@+id/List_watermark"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:background="@color/dodger_blue" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/chunvzuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/button_star"
                android:text="处女座"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/shenhuifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/button_star"
                android:text="神回复"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/guaishushu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/button_star"
                android:text="怪蜀黍"
                android:textColor="#FFFFFF" /> 
                            
            <TextView
                android:id="@+id/xiangsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/button_star"
                android:text="相思"
                android:textColor="#FFFFFF" />
            
            <TextView
                android:id="@+id/zaoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/button_star"
                android:text="早安"
                android:textColor="#FFFFFF" />
            
            <TextView
                android:id="@+id/xinnian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/button_star"
                android:text="新年"
                android:textColor="#FFFFFF" />   
                
            <TextView
                android:id="@+id/zuile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/button_star"
                android:text="醉了"
                android:textColor="#FFFFFF" />       
                 
            <TextView
                android:id="@+id/beiwanhuaile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/button_star"
                android:text="被玩坏了"
                android:textColor="#FFFFFF" /> 

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>